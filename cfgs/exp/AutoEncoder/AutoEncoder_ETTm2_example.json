{
    "exp":{
        "train":{
            "saved_model": true,
            "training": true,
            "batchsize":8,
            "epochs":50,
            "lr":0.001,
            "lr_adj":1,
            "shuffle": true,
            "drop_last": true,
            "optimizer": "adam",
            "loss": "mae",
            "patience": 7,
            "verbose": true,
            "delta": 0
        },
        "valid":{
            "batchsize":8,
            "shuffle": true,
            "drop_last": true
        },
        "test":{
            "batchsize":8,
            "shuffle": false,
            "drop_last": true
        },
        "metrics":{
            "MSE": true,
            "MAE": true,
            "RMSE": true,
            "MAPE": true,
            "RSE": true,
            "CORR": true
        },
        "device":"cuda"
    },

    "model":{
        "model_name":"AutoEncoder",
        "hidden_size": 64,
        "num_layers": 1,
        "dropout": 0,
        "bidirectional": false,
        "teacher_forcing_ratio": 0,
        
        "scaler": "standard",
        "load_external": true,
        "normal_external": false,
        "ext_scaler": "none",
        "add_time_in_day": true,
        "add_day_in_week": false,
        
        "max_epoch": 100,
        "learner": "adam",
        "learning_rate": 0.01,
        "lr_decay": true,
        "lr_scheduler": "multisteplr",
        "lr_decay_ratio": 0.1,
        "steps": [5, 20, 40, 70],
        "clip_grad_norm": true,
        "max_grad_norm": 5,
        "use_early_stop": true,
        "patience": 50,
        "num_nodes": 7,
        "feature_dim":2,
        "output_dim":1,
        "device":"cuda",
        "UseTimeFeature": true
    },

    "data":{   
        "dataset_name":"ETTm2",
        "path":"./datasets/ETTm2.csv",
        "lookback":48,
        "horizon":24,
        "channel":7,
        "normalize": 3,
        "train_ratio":0.6,
        "valid_ratio":0.2,
        "test_ratio":0.2,
        "multivariate":true,
        "target":0,
        "scalar":"StandardScalar",
        "freq": "h"

    }
    
}
